<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical"
    tools:context=".QuizSplashActivity">

    <TextView
        android:id="@+id/titulin"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/titulo"
        android:textAlignment="center"
        android:textColor="@color/colorTitulo"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="341dp"
        android:layout_height="201dp"
        android:layout_gravity="center"
        android:contentDescription="@string/imagenDescription"
        app:srcCompat="@drawable/logo_splash" />

    <TextView
        android:id="@+id/subtitulin"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:gravity="center"
        android:text="@string/titulo2"
        android:textAlignment="center"
        android:textColor="@color/colorSubtitulo"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorVersion"
        android:gravity="center"
        android:text="@string/version"
        android:textAlignment="center"
        android:textColor="@color/colorVersionTexto"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>